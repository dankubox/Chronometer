<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.ironknuckle.cronometro.Lista"
    android:id="@+id/menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CRONOMETRO"
        android:id="@+id/titulo1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRONOMETRO 1"
        android:id="@+id/btn_opc_1"
        android:layout_marginTop="44dp"
        android:onClick="cronometro"
        android:layout_below="@+id/titulo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_volver"
        android:layout_toLeftOf="@+id/btn_volver" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/btn_opc_1"
        android:layout_alignBottom="@+id/btn_opc_1"
        android:layout_toRightOf="@+id/titulo1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_delete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRONOMETRO 2"
        android:id="@+id/btn_list_2"
        android:layout_below="@+id/btn_opc_1"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/imageButton4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/btn_list_2"
        android:layout_alignBottom="@+id/btn_list_2"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:src="@android:drawable/ic_menu_delete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRONOMETRO 3"
        android:id="@+id/btn_list_3"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/imageButton5"
        android:layout_alignLeft="@+id/btn_list_2"
        android:layout_alignStart="@+id/btn_list_2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/btn_list_3"
        android:layout_alignBottom="@+id/btn_list_3"
        android:layout_toRightOf="@+id/imageButton4"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="volver"
        android:id="@+id/btn_volver"
        android:onClick="volver"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toRightOf="@+id/btn_opc_1"
        android:layout_toEndOf="@+id/btn_opc_1"
        android:src="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:layout_alignTop="@+id/btn_list_2"
        android:layout_toRightOf="@+id/btn_list_2"
        android:layout_alignBottom="@+id/btn_list_2"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:src="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:layout_alignTop="@+id/btn_list_3"
        android:layout_toRightOf="@+id/btn_list_3"
        android:layout_alignBottom="@+id/btn_list_3"
        android:layout_toLeftOf="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton3"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>